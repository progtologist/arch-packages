# Maintainer: Aris Synodinos <arissynod-gmail-com>
pkgname=gazebo-hg
pkgver=1
pkgrel=9
pkgdesc="A multi-robot simulator for outdoor environments"
arch=('i686' 'x86_64')
url="http://gazebosim.org/"
license=('Apache')
depends=('sdformat-hg' 'doxygen' 'boost' 'cegui-0.7' 'intel-tbb' 'libltdl' 'libxml2' 'ogre' 'protobuf' 'tinyxml' 'libtar' 'ffmpeg')
optdepends=('bullet')
provides=('gazebo')
conflicts=('gazebo')
makedepends=('mercurial' 'cmake')
md5sums=() #generate with 'makepkg -g'

_hgroot=http://bitbucket.org/osrf
_hgrepo=gazebo

pkgver() {
  cd "$srcdir/repo"
  printf "0.r%s.%s" "$(hg identify -n)" "$(hg identify -i)"
}

build() {
  cd "${srcdir}"
  msg "Connecting to Mercurial server...."

  if [[ -d "$_hgrepo" ]]; then
  	msg "Updating existing tree"
    cd "$_hgrepo"
    hg pull -u
    msg "Tree has been updated."
  else
  	msg "No local files found, retrieving sources"
    hg clone $_hgroot/$_hgrepo
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #
  cmake . -DCMAKE_INSTALL_PREFIX=/usr
}

package() {
  cd "$srcdir/$_hgrepo-build"
  make DESTDIR="$pkgdir/" install
}